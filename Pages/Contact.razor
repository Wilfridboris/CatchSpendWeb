@page "/contact"

<PageTitle>Contact Us - CatchSpend</PageTitle>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=Syne:wght@400;500;600;700;800&display=swap');

    .contact-page {
        font-family: 'Outfit', sans-serif;
        background: var(--bg-light, #F9F9F9);
        min-height: 100vh;
    }

    .contact-hero {
        background: linear-gradient(135deg, #0F0720 0%, #1a0a3e 40%, #4A148C 100%);
        padding: 8rem 2rem 6rem;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .contact-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background:
            radial-gradient(circle at 30% 70%, rgba(124, 58, 237, 0.3) 0%, transparent 40%),
            radial-gradient(circle at 70% 30%, rgba(16, 185, 129, 0.2) 0%, transparent 40%);
        animation: slowRotate 30s linear infinite;
    }

    @@keyframes slowRotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        display: block;
    }

    .hero-title {
        font-family: 'Syne', sans-serif;
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 800;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.7;
    }

    .contact-main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 2rem 6rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        margin-top: -4rem;
        position: relative;
        z-index: 10;
    }

    /* Contact Form */
    .contact-form-wrapper {
        background: white;
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        font-family: 'Syne', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        color: #1E293B;
        margin-bottom: 0.5rem;
    }

    .form-subtitle {
        color: #64748B;
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #1E293B;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .form-input,
    .form-textarea,
    .form-select {
        width: 100%;
        padding: 1rem 1.25rem;
        border: 2px solid #E2E8F0;
        border-radius: 12px;
        font-family: 'Outfit', sans-serif;
        font-size: 1rem;
        color: #1E293B;
        background: #F8FAFC;
        transition: all 0.3s ease;
    }

    .form-input:focus,
    .form-textarea:focus,
    .form-select:focus {
        outline: none;
        border-color: #7C3AED;
        background: white;
        box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.1);
    }

    .form-input::placeholder,
    .form-textarea::placeholder {
        color: #94A3B8;
    }

    .form-textarea {
        min-height: 150px;
        resize: vertical;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-submit {
        width: 100%;
        padding: 1.125rem 2rem;
        background: linear-gradient(135deg, #4A148C, #7C3AED);
        color: white;
        border: none;
        border-radius: 12px;
        font-family: 'Outfit', sans-serif;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .form-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3);
    }

    .form-submit:active {
        transform: translateY(0);
    }

    .submit-icon {
        transition: transform 0.3s ease;
    }

    .form-submit:hover .submit-icon {
        transform: translateX(4px);
    }

    /* Contact Info */
    .contact-info-wrapper {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .info-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
    }

    .info-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.12);
    }

    .info-card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .info-icon-wrapper {
        width: 56px;
        height: 56px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .info-icon-wrapper.email {
        background: linear-gradient(135deg, rgba(124, 58, 237, 0.1), rgba(124, 58, 237, 0.05));
    }

    .info-icon-wrapper.response {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.05));
    }

    .info-icon-wrapper.faq {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.05));
    }

    .info-icon-wrapper.social {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05));
    }

    .info-title {
        font-family: 'Syne', sans-serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: #1E293B;
    }

    .info-content {
        color: #64748B;
        line-height: 1.7;
    }

    .info-content a {
        color: #7C3AED;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .info-content a:hover {
        color: #4A148C;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-link {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        background: #F1F5F9;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #64748B;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .social-link:hover {
        background: linear-gradient(135deg, #4A148C, #7C3AED);
        color: white;
        transform: translateY(-3px);
    }

    /* FAQ Preview */
    .faq-preview {
        background: linear-gradient(135deg, #0F0720, #1a0a3e);
        border-radius: 20px;
        padding: 2rem;
        color: white;
    }

    .faq-preview .info-title {
        color: white;
    }

    .faq-list {
        list-style: none;
        padding: 0;
        margin: 1rem 0 0;
    }

    .faq-list li {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .faq-list li:last-child {
        border-bottom: none;
    }

    .faq-list li::before {
        content: '?';
        width: 24px;
        height: 24px;
        background: rgba(124, 58, 237, 0.3);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.8rem;
        flex-shrink: 0;
    }

    .faq-list a {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .faq-list a:hover {
        color: #7C3AED;
    }

    /* Success Message */
    .success-message {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.05));
        border: 1px solid #10B981;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: none;
    }

    .success-message.show {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .success-icon {
        width: 40px;
        height: 40px;
        background: #10B981;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .success-text {
        color: #065F46;
    }

    .success-text strong {
        display: block;
        margin-bottom: 0.25rem;
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .contact-main {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .contact-info-wrapper {
            order: -1;
        }
    }

    @@media (max-width: 768px) {
        .contact-hero {
            padding: 6rem 1.5rem 5rem;
        }

        .contact-main {
            padding: 2rem 1.5rem 4rem;
            margin-top: -3rem;
        }

        .contact-form-wrapper {
            padding: 2rem 1.5rem;
        }

        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

